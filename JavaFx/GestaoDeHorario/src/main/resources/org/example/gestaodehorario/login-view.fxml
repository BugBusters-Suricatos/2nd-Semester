<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="404.0" prefWidth="504.0" style="-fx-background-color: #DCDCDC; -fx-border-color: black;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.gestaodehorario.Controller.TelaLoginController">
    <children>
        <VBox alignment="CENTER" layoutX="102.0" layoutY="77.0" prefHeight="250" prefWidth="300" spacing="15">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Login">
            <font>
               <Font size="21.0" />
            </font></Label>
            <TextField fx:id="txtUsuario" mouseTransparent="true" promptText="Email" style="-fx-border-color: black; -fx-border-radius: 15px; -fx-background-radius: 15px;" />
            <PasswordField fx:id="txtSenha" promptText="Senha" style="-fx-background-radius: 15px; -fx-border-radius: 15px; -fx-border-color: black;" />
            <Button onAction="#LoginClick"  text="Entrar" />
           <Hyperlink text="Esqueci minha senha">
            <font>
               <Font size="12.0" />
            </font></Hyperlink>
        </VBox>
    </children>
</AnchorPane>
