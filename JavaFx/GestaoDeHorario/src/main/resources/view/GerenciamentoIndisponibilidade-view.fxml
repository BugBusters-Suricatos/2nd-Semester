<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.gestaodehorario.Controller.IndisponibilidadeController">

    <children>
        <Label layoutX="30" layoutY="20" text="Cadastro de Indisponibilidade" style="-fx-font-size: 18px;"/>

        <Label layoutX="30" layoutY="60" text="Curso:"/>
        <ComboBox fx:id="cbCursos" layoutX="100" layoutY="56" prefWidth="180"/>

        <Label layoutX="320" layoutY="60" text="Semestre:"/>
        <ComboBox fx:id="cbSemestres" layoutX="400" layoutY="56" prefWidth="100"/>

        <Label layoutX="520" layoutY="60" text="Professor:"/>
        <ComboBox fx:id="cbProfessores" layoutX="600" layoutY="56" prefWidth="220"/>

        <Button text="Salvar Todas" fx:id="btnSalvarTodas" layoutX="830" layoutY="56" prefWidth="120"/>

        <ScrollPane fx:id="scrollPane" layoutX="30" layoutY="100" prefWidth="920" prefHeight="450">
            <content>
                <GridPane fx:id="gridSlots" hgap="5" vgap="5" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
